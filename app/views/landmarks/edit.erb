<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />

<h2>Edit Historical Landmark</h2>
<br>
Name <input type="text" id="landmark-name" name="landmark[name]" value="<%=@landmark.name%>">
<br>
Edit Figures:
<br>
<%Figure.all.each do |figure|%>
  <%=figure.name%>
  <input type="checkbox" name="landmark[figure_ids][]" value="<%=figure.id%>" <%='checked' if @landmark.figures.include?(figure) %>>
<%end%>

Add New: <input type="text" id="new_figure" name="figure[name]">
<br>
Edit Titles
<br>
<%Title.all.each do |title|%>
  <%=title.name%>
  <input type="checkbox" name="landmark[title_ids][]" value="<%= title.id%>" id="<%=title.name%>" <%='checked' if @landmark.titles.include?(title)%>>
<%end%>
<br>
Add New Title: <input type="text" id="new_title" name="title[name]">
<br>
<input type="submit" value="Edit Landmark" >
</form>



<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
